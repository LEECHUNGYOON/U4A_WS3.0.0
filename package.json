{
  "name": "com.u4a_ws3.app",
  "displayName": "U4A Workspace",
  "description": "U4A Application for Integrated Development of Web Environments Developed by the U4A Solution RnD Team.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "electron-builder install-app-deps",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder"
  },
  "keywords": [
    "ecosystem:cordova"
  ],
  "author": "U4A Solution RnD Team",
  "license": "Apache-2.0",
  "devDependencies": {
    "cordova-electron": "^3.0.0",
    "cordova-plugin-whitelist": "^1.3.5"
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-whitelist": {}
    },
    "platforms": [
      "electron"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LEECHUNGYOON/U4A_WS3.0.0.git"
  },
  "build": {
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "include": "www/ext_api/nsh/uninstaller.nsh"
    },
    "asar": true,
    "copyright": "Copyright 2020. INFOCG Inc. all rights reserved.",
    "artifactName": "U4A-Workspace-Setup-${version}.${ext}",
    "win": {},    
    "publish": {
      "provider": "github"
    },
    "files": [
      "**/*",
      "./node_modules/**/*",
      "./package.json"
    ],
    "extraResources": [
      "./node_modules/**/*",
      "./node_modules/@electron/remote/**",
      "./www/ext_api/**",
      {
        "from": "node_modules/regedit/vbs",
        "to": "regedit/vbs",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "@octokit/core": "^3.6.0",
    "adm-zip": "^0.5.10",
    "arraybuffer-to-buffer": "^0.0.7",
    "basic-ftp": "^5.0.2",
    "child_process": "^1.0.2",
    "cordova": "^11.1.0",
    "dicer": "^0.3.1",
    "electron-log": "^4.4.8",
    "electron-updater": "^5.0.1",
    "electron-window-state": "^5.0.3",
    "exceljs": "^4.3.0",
    "fs-extra": "^10.1.0",
    "gh-release-assets": "^2.0.1",
    "http": "^0.0.1-security",
    "menubar": "^9.3.0",
    "mime-types": "^2.1.35",
    "mongodb": "^5.1.0",
    "ncp": "^2.0.0",
    "net": "^1.0.2",
    "nircmd": "^2.0.0",
    "node-cmd": "^5.0.0",
    "node-screen": "^0.0.12",
    "node-ssh": "^13.0.1",
    "node-zip": "^1.1.1",
    "ping": "^0.4.2",
    "proper-lockfile": "^4.1.2",
    "puppeteer-core": "^20.7.2",
    "random-key": "^0.3.2",
    "regedit": "^5.0.0",
    "systeminformation": "^5.15.1",
    "ws": "^8.13.0",
    "xml-js": "^1.6.11",
    "yamljs": "^0.3.0",
    "zip-lib": "^0.7.3"
  }
}
